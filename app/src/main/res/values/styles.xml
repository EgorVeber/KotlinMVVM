<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_style_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/margin_card_view</item>
        <item name="cardCornerRadius">@dimen/radius_card_view</item>
    </style>

    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/search_icon_text_color</item>
        <item name="android:background">#f9d71c</item>
        <item name="menu">@menu/menu_main</item>
        <item name="title">@string/app_name</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="search_icon_text_color">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="navigation_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/drawer_text_color</item>
        <item name="itemTextColor">@color/drawer_text_color</item>
    </style>

    <style name="progressBar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/new_color_5</item>
    </style>

    <style name="liner_layout_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="liner_layout_default.height">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="city_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_city</item>
    </style>

    <style name="date_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_base</item>
        <item name="android:layout_marginTop">@dimen/margin_base</item>
        <item name="android:textSize">@dimen/text_size_info</item>
    </style>

    <style name="weather_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_weather</item>
    </style>

    <style name="info_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">@dimen/margin_info</item>
        <item name="android:textSize">@dimen/text_size_info</item>
    </style>

    <style name="recycler_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_info</item>
    </style>

    <style name="recycler_week_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_info2</item>
    </style>

    <style name="recycler_citys_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/recycler_item_text_size</item>
        <item name="android:padding">@dimen/recycler_item_padding</item>
    </style>

    <style name="separator_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/recycler_item_line_height</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_info</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_info</item>
    </style>

    <style name="week_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_weekT</item>
    </style>

    <style name="week_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="week_icon_size">
        <item name="android:layout_width">@dimen/week_size_icon</item>
        <item name="android:layout_height">@dimen/week_size_icon</item>
    </style>

    <style name="week_text_temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="main_card_view_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="main_card_view_info_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:src">@drawable/info_black</item>
    </style>

    <style name="add_card_view_icon_size">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="add_card_view_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_info</item>
    </style>

    <style name="add_card_view_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:textSize">@dimen/text_size_info</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="fragment_textview_title" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Настройки</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="radio_button_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>